
/* pages/checkin/checkin.wxss */

.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 用户信息区域样式 */
.user-info-section {
  display: flex;
  justify-content: center;
  padding: 30rpx 0;
}

.user-info-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.user-name {
  margin-top: 20rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.login-btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #fff;
  background: linear-gradient(to right, #4facfe, #00f2fe);
  border-radius: 40rpx;
  box-shadow: 0 6rpx 10rpx rgba(79, 172, 254, 0.3);
}

/* 积分信息区域样式 */
.points-section {
  margin-top: 20rpx;
}

.points-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  text-align: center;
}

.points-title {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.points-value {
  font-size: 80rpx;
  font-weight: bold;
  color: #ff6b81;
  margin-bottom: 20rpx;
}

.checkin-info {
  font-size: 28rpx;
  color: #888;
}

/* 签到按钮区域样式 */
.checkin-section {
  margin-top: 30rpx;
}

.checkin-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.today-points {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 30rpx;
  text-align: center;
}

.points-num {
  font-size: 40rpx;
  font-weight: bold;
  color: #ff6b81;
  margin: 0 10rpx;
}

.checkin-btn {
  width: 80%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 34rpx;
  font-weight: 500;
  color: #fff;
  background: linear-gradient(to right, #ff6b81, #ff8e53);
  border-radius: 45rpx;
  box-shadow: 0 6rpx 10rpx rgba(255, 107, 129, 0.3);
  transition: all 0.3s;
}

.checkin-btn.checked {
  background: #cccccc;
  box-shadow: none;
  color: #888;
}

/* 签到规则区域样式 */
.rules-section {
  margin-top: 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #ff6b81;
}

.rules-content {
  padding: 10rpx 0;
}

.rule-item {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  padding: 10rpx 0;
}