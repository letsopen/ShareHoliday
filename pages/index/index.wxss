
/**index.wxss**/
.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 用户信息区域样式 */
.user-info-section {
  background: linear-gradient(to right, #4facfe, #00f2fe);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(79, 172, 254, 0.2);
}

.user-info-wrapper {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.user-detail {
  margin-left: 30rpx;
}

.user-name {
  font-size: 34rpx;
  color: #fff;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.user-points {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.login-btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #4facfe;
  background: #fff;
  border-radius: 40rpx;
  box-shadow: 0 6rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 功能模块区域样式 */
.feature-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 30rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #4facfe;
}

.feature-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}

.feature-item {
  background: #fff;
  border-radius: 15rpx;
  padding: 30rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.feature-item:active {
  transform: scale(0.98);
}

.feature-item.disabled {
  opacity: 0.6;
}

.feature-icon {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin: 0 auto 20rpx;
  border-radius: 50%;
  font-size: 50rpx;
}

.checkin-icon {
  background: linear-gradient(135deg, #ff6b81, #ff8e53);
  color: #fff;
}

.market-icon {
  background: linear-gradient(135deg, #4facfe, #00f2fe);
  color: #fff;
}

.gift-icon {
  background: linear-gradient(135deg, #43e97b, #38f9d7);
  color: #fff;
}

.profile-icon {
  background: linear-gradient(135deg, #fa709a, #fee140);
  color: #fff;
}

.feature-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: #999;
}

/* 公告区域样式 */
.notice-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.notice-card {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 20rpx;
}

.notice-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 15rpx;
}

.notice-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.notice-content text {
  display: block;
  margin-bottom: 10rpx;
}